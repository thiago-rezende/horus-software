{
  /* extensions */
  "extends": "@horus-software/typescript-config/tsconfig.base.json",
  /* compiler options */
  "compilerOptions": {
    /* strict */
    "strictPropertyInitialization": false,
    /* output & codebase */
    "outDir": "build",
    "baseUrl": "source",
    /* paths config */
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  /* files to include */
  "include": [
    "source/**/*"
  ]
}
