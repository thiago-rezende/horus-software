{
  "compilerOptions": {
    /* target */
    "module": "CommonJS",
    "target": "ES2024",
    /* module resolution */
    "moduleResolution": "node",
    /* libraries */
    "lib": [
      "ESNext",
      "DOM"
    ],
    /* declarations */
    "declaration": true,
    /* comments behavior */
    "removeComments": true,
    /* defualt imports */
    "allowSyntheticDefaultImports": true,
    /* source map behavior */
    "sourceMap": true,
    /* incremental build */
    "incremental": true,
    /* interoperability */
    "esModuleInterop": true,
    /* file naming */
    "forceConsistentCasingInFileNames": true,
    /* strict */
    "strict": true,
    "alwaysStrict": true,
    /* implicit behavior */
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    /* decorators */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* unused code */
    "noUnusedLocals": true,
    "allowUnusedLabels": false,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    /* catch behavior */
    "useUnknownInCatchVariables": true,
    /* optionals */
    "exactOptionalPropertyTypes": true,
    /* control flow */
    "noFallthroughCasesInSwitch": true,
    /* indexing */
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    /* completeness */
    "skipLibCheck": true
  }
}
